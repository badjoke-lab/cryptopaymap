{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "patch.community.schema.json",
  "title": "Community Patch",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "kind": { "type": "string", "const": "community" },
    "payment": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "accepts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["asset", "chain"],
            "properties": {
              "asset": { "type": "string", "pattern": "^[A-Z0-9]{2,10}$" },
              "chain": { "$ref": "chains.meta.json#/definitions/chainId" },
              "evidence": {
                "type": "array",
                "items": { "type": "string", "format": "uri" }
              }
            }
          }
        }
      }
    },
    "notes": { "type": "string", "maxLength": 1000 }
  }
}

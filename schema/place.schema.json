{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CryptoPayMap Place v2",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "lat", "lng", "verification"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "lat": { "type": "number", "minimum": -90, "maximum": 90 },
    "lng": { "type": "number", "minimum": -180, "maximum": 180 },
    "city": { "type": "string" },
    "country": { "type": "string" },
    "address": { "type": "string" },
    "category": { "type": "string" },
    "coins": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "website": { "type": "string" },

    "verification": {
      "type": "object",
      "additionalProperties": false,
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["owner", "community", "directory", "unverified"]
        },
        "last_checked": { "type": "string", "format": "date-time" },
        "last_verified": { "type": "string", "format": "date-time" },
        "submitted_by": {
          "type": "string",
          "enum": ["owner", "self", "third-party", "unknown"]
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "url"],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "official_site",
                  "provider_directory",
                  "text",
                  "widget",
                  "receipt",
                  "screenshot",
                  "other"
                ]
              },
              "name": { "type": "string" },
              "rule": { "type": "string" },
              "url": { "type": "string" },
              "snippet": { "type": "string", "maxLength": 240 },
              "when": { "type": "string", "format": "date-time" }
            }
          }
        },
        "submitted": {
          "type": "object",
          "additionalProperties": false,
          "required": ["by", "role", "at"],
          "properties": {
            "by": { "type": "string" },
            "role": { "type": "string", "enum": ["owner", "non_owner", "unknown"] },
            "at": { "type": "string", "format": "date-time" }
          }
        },
        "review": {
          "type": "object",
          "additionalProperties": false,
          "required": ["status"],
          "properties": {
            "status": { "type": "string", "enum": ["approved", "rejected", "pending"] },
            "by": { "type": "string" },
            "at": { "type": "string", "format": "date-time" },
            "notes": { "type": "string", "maxLength": 400 }
          }
        }
      }
    },

    "profile": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "summary": { "type": "string", "maxLength": 2000 },
        "gallery": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["url"],
            "properties": {
              "url": { "type": "string" },
              "credit": { "type": "string" }
            }
          }
        },
        "badges": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        }
      }
    },

    "media": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["url"],
            "properties": {
              "url": { "type": "string" },
              "credit": { "type": "string" },
              "caption": { "type": "string", "maxLength": 600 }
            }
          }
        }
      }
    }
  }
}

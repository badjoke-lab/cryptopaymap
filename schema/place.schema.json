{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CryptoPayMap Place v2.1 (compat)",
  "type": "object",
  "additionalProperties": true,
  "required": ["id", "name", "lat", "lng", "verification"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "lat": { "type": "number", "minimum": -90, "maximum": 90 },
    "lng": { "type": "number", "minimum": -180, "maximum": 180 },
    "city": { "type": "string" },
    "country": { "type": "string" },
    "address": { "type": "string" },
    "category": { "type": "string" },
    "category_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "coins": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true
    },
    "website": {
      "anyOf": [{ "type": "string" }, { "type": "null" }]
    },
    "payment": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "accepts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["asset", "chain"],
            "properties": {
              "asset": { "type": "string", "pattern": "^[A-Z0-9]{2,10}$" },
              "chain": {
                "type": "string",
                "enum": [
                  "bitcoin",
                  "lightning",
                  "evm-mainnet",
                  "polygon",
                  "arbitrum",
                  "base",
                  "bsc",
                  "solana",
                  "tron",
                  "ton",
                  "avalanche"
                ]
              },
              "method": {
                "type": "string",
                "enum": ["onchain", "lightning", "lnurl", "bolt12", "other"]
              },
              "processor": {
                "type": "string",
                "enum": [
                  "btcpay",
                  "opennode",
                  "strike",
                  "coinbase-commerce",
                  "nowpayments",
                  "bitpay",
                  "self-hosted",
                  "other"
                ]
              },
              "note": { "type": "string", "maxLength": 200 }
            }
          }
        },
        "preferred": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z0-9]{2,10}:[a-z0-9\\-]{2,32}$"
          },
          "uniqueItems": true
        }
      }
    },
    "socials": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["platform"],
        "properties": {
          "platform": {
            "type": "string",
            "enum": [
              "instagram",
              "facebook",
              "x",
              "tiktok",
              "youtube",
              "telegram",
              "whatsapp",
              "wechat",
              "line",
              "threads",
              "pinterest",
              "other"
            ]
          },
          "url": { "type": "string" },
          "handle": { "type": "string" }
        }
      }
    },
    "verification": {
      "type": "object",
      "additionalProperties": true,
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["owner", "community", "directory", "unverified"]
        },
        "last_checked": {
          "anyOf": [
            { "type": "string", "format": "date-time" },
            { "type": "string", "format": "date" }
          ]
        },
        "last_verified": {
          "anyOf": [
            { "type": "string", "format": "date-time" },
            { "type": "string", "format": "date" }
          ]
        },
        "submitted_by": {
          "type": "string",
          "enum": ["owner", "self", "third-party", "unknown"]
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "official_site",
                  "provider_directory",
                  "text",
                  "widget",
                  "receipt",
                  "screenshot",
                  "other"
                ]
              },
              "name": { "type": "string" },
              "rule": { "type": "string" },
              "url": { "type": "string" },
              "snippet": { "type": "string", "maxLength": 240 },
              "when": {
                "anyOf": [
                  { "type": "string", "format": "date-time" },
                  { "type": "string", "format": "date" }
                ]
              }
            }
          }
        },
        "submitted": {
          "type": "object",
          "additionalProperties": true,
          "required": ["by", "role", "at"],
          "properties": {
            "by": { "type": "string" },
            "role": {
              "type": "string",
              "enum": ["owner", "non_owner", "unknown"]
            },
            "at": {
              "anyOf": [
                { "type": "string", "format": "date-time" },
                { "type": "string", "format": "date" }
              ]
            }
          }
        },
        "review": {
          "type": "object",
          "additionalProperties": true,
          "required": ["status"],
          "properties": {
            "status": {
              "type": "string",
              "enum": ["approved", "rejected", "pending"]
            },
            "by": { "type": "string" },
            "at": {
              "anyOf": [
                { "type": "string", "format": "date-time" },
                { "type": "string", "format": "date" }
              ]
            },
            "notes": { "type": "string", "maxLength": 400 }
          }
        }
      }
    },
    "profile": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "summary": { "type": "string", "maxLength": 2000 },
        "gallery": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": ["url"],
            "properties": {
              "url": { "type": "string" },
              "credit": { "type": "string" }
            }
          }
        },
        "badges": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        }
      }
    },
    "media": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": ["url"],
            "properties": {
              "url": { "type": "string" },
              "credit": { "type": "string" },
              "caption": { "type": "string", "maxLength": 600 }
            }
          }
        }
      }
    }
  }
}

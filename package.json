{
  "name": "cryptopaymap-specfix",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "cpm:migrate": "TS_NODE_PROJECT=tsconfig.scripts.json ts-node scripts/migrate_v2.ts",
    "cpm:validate": "TS_NODE_PROJECT=tsconfig.scripts.json ts-node scripts/validate.ts",
    "cpm:fix:payments": "TS_NODE_PROJECT=tsconfig.scripts.json ts-node scripts/fix_v2_hard.ts",
    "cpm:fix:status-sources": "TS_NODE_PROJECT=tsconfig.scripts.json ts-node scripts/fix_status_sources.ts",
    "cpm:fix:categories": "TS_NODE_PROJECT=tsconfig.scripts.json ts-node scripts/fix_categories.ts",
    "cpm:fix:chain-method": "TS_NODE_PROJECT=tsconfig.scripts.json ts-node scripts/fix_payment_chain_method.ts",
    "cpm:migrate:payments": "ts-node --project tsconfig.scripts.json scripts/migrate_payments.ts",
    "cpm:validate:payments": "tsx scripts/validate.ts",
    "cpm:fix:accepts": "tsx scripts/fix_accepts_shape.ts",
    "cpm:fix:evm": "tsx scripts/demote_unsupported_chains.ts",
    "cpm:validate:submissions": "tsx scripts/validate_submissions.ts",
    "cpm:fuzz:payments": "tsx scripts/fuzz_payments.ts",
    "cpm:lint:nocodeja": "bash scripts/check_no_ja_in_code.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.5",
    "leaflet": "1.9.4",
    "next": "14.2.5",
    "node-fetch": "^2.7.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-leaflet": "4.2.1",
    "react-leaflet-cluster": "2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "18.2.66",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "10.4.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "public/data/places/**/*.json": [
      "npm run cpm:fix:categories --if-present",
      "npm run cpm:fix:chain-method --if-present",
      "npm run cpm:validate"
    ],
    "schema/**/*.json": [
      "npm run cpm:validate"
    ],
    "scripts/**/*.ts": [
      "npm run cpm:validate"
    ]
  }
}
